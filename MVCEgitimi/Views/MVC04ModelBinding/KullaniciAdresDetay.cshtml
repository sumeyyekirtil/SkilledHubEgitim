@model UyeSayfasiViewModel
@*2 model eklemek için yeni bir model oluşturup import edilir*@
@{
    ViewData["Title"] = "Kullanıcı Detayı";
}

<h1>Kullanıcı Detayı</h1>

<h3> Model içerisinden gelen verileri ekranda gösterme</h3>
<table class="table">
    <tr>
        <td>Ad</td>
        <td>@Model.Kullanici.Ad</td> @*yeni oluşturulan model deki kullanıcı içindeki adı yazdır*@
    </tr>
    <tr>
        <td>Soyad</td>
        <td>@Model.Kullanici.KullaniciAdi</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>@Model.Kullanici.Soyad</td>
    </tr>
    <tr>
        <td>Sifre</td>
        <td>@Model.Kullanici.Email</td>
    </tr>
</table>

<h1>Adres Bilgileri</h1>

@* null referans hatasından kurtulma bloğu *@
@if (Model is not null)
{
    <table>
        <tr>
            <td>Şehir</td>
            <td>@Model.Adres.Sehir</td> @*yeni oluşturulan model deki adres içindeki sehir yazdır*@
        </tr>
        <tr>
            <td>İlçe</td>
            <td>@Model.Adres.Ilce</td>
        </tr>
        <tr>
            <td>Açık Adres</td>
            <td>@Model.Adres.AcikAdres</td>
        </tr>
    </table>
}