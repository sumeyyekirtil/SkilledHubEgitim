@{
    ViewData["Title"] = "MVC Http Context";
}

<h2>
    MVC Http Context
</h2>

<p>
    Mvc de controller veya view larda uygulamanın yapılan isteklerdeki controller, action, id, query string vb bilgilere erişip işlememizi sağlayan yapı HttpContext dir.
</p>

<p>
    @Html.Raw(TempData["mesaj"])
</p>
<p>
    @Html.Editor("kelime")
</p>
<h4>Post</h4>
<form method="post">
    @Html.Editor("kelime")
</form>

<h5>Controller Adı :</h5>
@ViewContext.RouteData.Values["controller"]

<h5>Action Adı :</h5>
@ViewContext.RouteData.Values["action"]

<h5>Id Değeri :</h5>
@ViewContext.RouteData.Values["id"]

<h5>Request Method :</h5>
@Context.Request.Method

<h5>Request Scheme :</h5>
@Context.Request.Scheme

<h5>Request QueryString :</h5>
@Context.Request.QueryString

<h5>Query Kelime :</h5>
@Context.Request.Query["kelime"]

<h5>Session Değeri :</h5>
@*Context.Session["UserGuid"]*@
@Context.Session.GetString("userguid")

<h5>Cookie değeri :</h5>
@Context.Request.Cookies["userGuid"]

<h5>Oturum Açılmış mı? :</h5>
@Context.User.Identity.IsAuthenticated

<h5>Kullanıcı User Rolüne Sahip mi? :</h5>
@Context.User.IsInRole("User")

<h5>Context Session Id :</h5>
@Context.Session.Id

<hr>

<h3>Ekstra Metotlar</h3>

<p>
    Controller Adı:
    @Context.GetRouteValue("Controller")
    <h5>Action Adı :</h5>
    @ViewContext.RouteData.Values["action"]
    <h5>Id Değeri :</h5>
    @ViewContext.RouteData.Values["id"]
</p>