@{
    ViewData["Title"] = "MVC03 Data Transfer Controller";
}

<h1>Mvc de Controller den View a Veri Gönderme</h1>
<h3>@ViewBag.UrunKategorisi Ürünleri</h3>
<table class="table table-striped table-hover">
    <tr>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
        <th>Stok</th>
    </tr>
    @foreach (var item in ViewBag.Urunler)
    {
        <tr>
            <td>@item.Adi</td>
            <td>@item.Fiyati</td>
            <td>@item.Stok</td>
        </tr>
    }
    <caption>
        @TempData["UrunBilgi"]
    </caption>
</table>
@TempData["UrunBilgi"]

<table class="table table-striped table-hover">
    <tr>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
        <th>Stok</th>
    </tr>
    @foreach (var item in ViewBag["Urunler"] as List<Urun>)
    {
        <tr>
            <td>@item.Adi</td>
            <td>@item.Fiyati</td>
            <td>@item.Stok</td>
        </tr>
    }
    <caption>
        @TempData["UrunBilgi"]
    </caption>
</table>

